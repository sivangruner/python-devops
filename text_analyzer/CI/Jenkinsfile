def isTagBuild(){
    def tag = ''
    if (env.GIT_TAG && env.GIT_TAG != "") {
        tag = env.GIT_TAG
    
    } else {
        tag = bat(
        script: 'git describe --exact-match --tags 2>NUL || exit 0',
        returnStdout: true
        ).trim()
    }

    if (tag == '') {
        return false
    }
    return true

}


pipeline {
    agent any

    stages {

        stage('Lint') {
            when{
                expression{isTagBuild()}
            }
            steps {
                dir('.\\text_analyzer') {
                    bat 'task lint'
                }
            }
        }

        stage('Build Package') {
            when{
                expression{isTagBuild()}
            }
            steps {
                dir('.\\text_analyzer') {
                    bat 'task build ver=1.2.3'
                }
            }
        }


        stage('Test') {
            when{
                expression{isTagBuild()}
            }
            steps {
                dir('.\\text_analyzer') {
                    bat 'task test'
                }
            }
        }
    }
}
