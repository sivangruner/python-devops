pipeline {
    agent any   

    }

        stage('Lint') {
            steps {
                bat 'task lint'
            }
        }

        stage('Build Package') {
            steps {
                bat "task clean"
                bat "task build ver=${VERSION}"
            }
        }

        stage('Test') {
            steps {
                bat 'task test'
            }
        }

    }

}
