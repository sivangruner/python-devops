def isTagBuild(){
    return true
}

pipeline {
    agent any
    stages {
       stage('Check Tag Format') {
            steps {
                script {
                    // Check if the build is triggered by a tag
                    def tag = env.GIT_TAG
                    if (tag == null || !tag.matches("^v\\d+\\.\\d+\\.\\d+\$")) {
                        echo "No valid version tag found, skipping pipeline."
                        currentBuild.result = 'ABORTED'
                        error("This build only runs on tags in the format v1.2.3")
                    } else {
                        echo "Valid tag format detected: ${tag}"
                    }
                }
            }
        }
        stage('Lint') {
            when{
                expression{isTagBuild()}
            }
            steps {
                dir('.\\text_analyzer') {
                    bat 'task lint'
                }
            }
        }

        stage('Build Package') {
            when{
                expression{isTagBuild()}
            }
            steps {
                dir('.\\text_analyzer') {
                    bat 'task build ver=1.2.3'
                }
            }
        }


        stage('Test') {
            when{
                expression{isTagBuild()}
            }
            steps {
                dir('.\\text_analyzer') {
                    bat 'task test'
                }
            }
        }
    }
}
