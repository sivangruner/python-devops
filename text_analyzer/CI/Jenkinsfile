pipeline {
    agent any

    stages {
        stage('Lint') {
            steps {
                dir('.\\text_analyzer') {
                    bat 'echo %WORKSPACE%'
                    bat 'task lint'
                }
            }
        }

        stage('Build Package') {
            steps {
                dir('.\\text_analyzer') {
                    bat 'task build ver=1.2.3'
                }
            }
        }


        stage('Test') {
            steps {
                dir('.\\text_analyzer') {
                    bat 'set PYTHONUTF8=1'
                    bat 'chcp 65001'
                    bat 'task test'
                }
            }
        }
    }
}
