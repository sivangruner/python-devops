pipeline {
    agent any

    stages {
        stage('Lint') {
            steps {
                bat 'task lint'
            }
        }

        stage('Build Package') {
            steps {
                bat "task clean"
                bat "task build ver=1.2.3"
            }
        }

        stage('Test') {
            steps {
                bat 'task test'
            }
        }
    }
}
